# Obsidian RAG Environment Variables
# Copy this file to .env and update with your actual paths

# Path to your Obsidian vault
OBSIDIAN_VAULT_PATH="/Users/YOUR_USERNAME/Library/Mobile Documents/iCloud~md~obsidian/Documents/YOUR_VAULT_NAME"

# Path to ChromaDB database directory
CHROMA_DB_PATH="/path/to/obsidian_rag/chroma_db"

# Path to the knowledge graph pickle file
KNOWLEDGE_GRAPH_PATH="/path/to/obsidian_rag/graph_data/knowledge_graph_full.pkl"

# Anthropic API Key (required for graph building and querying)
ANTHROPIC_API_KEY="your_api_key_here"

# Optional: Claude model to use (default: claude-haiku-4-5)
CLAUDE_MODEL="claude-haiku-4-5"

# Optional: Embedding service URL (default: http://localhost:8000)
EMBEDDING_SERVICE_URL="http://localhost:8000"

# Optional: Graph query service URL (default: http://localhost:8002)
CLAUDE_GRAPH_SERVICE_URL="http://localhost:8002"

# Optional: Ollama host for local LLM (if using Ollama)
OLLAMA_HOST="http://localhost:11434"
